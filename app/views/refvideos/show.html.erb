<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
  <div class="mdl-card__title">
    <h3 class="mdl-card__title-text"><%= @refvideo.name %></h3>
  </div>
  <div class="mdl-card mdl-shadow-2dp mdl-cell mdl-cell--12-col">
    <div class="refvideo embed-container">
      <%= embed(@refvideo.url) %>
    </div>
    <div class="description-container">
      <div class="description">
        <%= @refvideo.body %>
      </div>
    </div>
  </div>
  <% if current_user.admin? %>
    <div class="description-container mdl-card mdl-shadow-2dp mdl-cell mdl-cell--12-col">
      <div class="admin-buttons">
        <%= link_to "Edit Training Video", edit_refvideo_path(@refvideo), class: 'small-button mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect' %>
        <%= link_to "Delete Training Video", @refvideo, method: :delete, class: 'small-button mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect' %>
      </div>
  <% end %>
    </div>
</div>
